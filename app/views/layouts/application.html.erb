<!DOCTYPE html>
<html>
<head>
    <title>Oladium</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <% if content_for?(:style) %>
        <style>
            <%= yield :style %>
        </style>
    <% end %>
    <% if content_for?(:script) %>
        <script type="text/javascript">
            <%= yield :script %>
        </script>
    <% end %>
</head>
<body>
<header>
    <%= render :partial => 'layouts/mainmenu' %>
</header>
<div class="container">
    <div class="row">
        <% unless notice.blank? %>
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert">?</a>
                <span><%= notice %></span>
            </div>
        <% end %>

        <% unless alert.blank? %>
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert">?</a>
                <span><%= alert %></span>
            </div>
        <% end %>
    </div>

    <div id="page" class="container">
        <%= yield %>
    </div>
</div>
<div class="well pagination-centered">
    <p class="muted">Â© 2012 Oladium</p>
</div>
</body>
</html>

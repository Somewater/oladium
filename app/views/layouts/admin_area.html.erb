<!DOCTYPE html>
<html>
<head>
    <title>Oladium</title>
    <%= stylesheet_link_tag 'application', media: 'screen, projection, print' %>
    <%= stylesheet_link_tag 'application-admin', media: 'screen, projection, print' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <% if content_for?(:style) %>
        <style>
            <%= yield :style %>
        </style>
    <% end %>
    <% if content_for?(:script) %>
        <script type="text/javascript">
            <%= yield :script %>
        </script>
    <% end %>
</head>
<body>
<div class="container">
  <div class="span-24">
    <% unless notice.blank? %><p class="notice"><%= notice %></p><% end %>
    <% unless alert.blank? %><p class="alert"><%= alert %></p><% end %>
  </div>
    <div class="span-12 last">
      <a href="<%= admin_path %>"><h2>Admin area</h2></a>
    </div>
    <div class="span-12 last">
      <span>Logging as <%= current_user.email %></span>
      <span><a href="<%= destroy_user_session_path() %>">Logout</a></span>
    </div>
    <div class="span-24">
      <%= yield %>
    </div>
  <div class="span-24">
    Â© 2012
  </div>
</div>
</body>
</html>
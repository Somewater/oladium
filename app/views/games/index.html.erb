<div id="games">
  <% @games.each do |game| %>
    <div class="game-item">
      <div class="game-image">
        <a href="<%= game_path(game) %>">
          <img src="<%= game.image %>" alt="<%= game.title %>">
        </a>
      </div>
        <h3>
          <a href="<%= game_path(game) %>">
            <%= game.title %>
          </a>
        </h3>
        <p><%= truncate(game.description, :length => 400) %></p>
    </div>
  <% end %>
</div>
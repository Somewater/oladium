<div class="span12">
    <div class="span5 well">
        <p><i class="icon-star"></i>Primary:&nbsp;<%= best_in_place @game, :primary, :type => :input %></p>
        <p><i class="icon-heart"></i>Priority:&nbsp;<%= best_in_place @game, :priority, :type => :input %></p>
        <p><i class="icon-thumbs-up"></i>Votes:&nbsp;<%= best_in_place @game, :votes, :type => :input %> (<%= @game.votings.to_i %>/<%= @game.votings.to_i * 5 %>)</p>
        <p><i class="icon-ok"></i>Votings:&nbsp;<%= best_in_place @game, :votings, :type => :input %></p>
        <p><i class="icon-eye-open"></i>Usage:&nbsp;<%= best_in_place @game, :usage, :type => :input %></p>
    </div>
    <div class="span5 well">
        2
    </div>
</div>
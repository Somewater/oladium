<div class="slide thumbnail" style="width: 360px; height: 200px; background-color: #eeeeff">
    <div>
        <div style="float: left; height: 100%; margin-right: 10px; margin-bottom: 30px; text-align: center;">
            <a href="<%= game_path(game) %>" class="thumbnail">
                <img src="<%= Game.url_root + "/" + game.image %>" alt="<%= game.title %>">
            </a>
            <div class="stars" id="stars-<%= game.id %>" score="<%= number_with_precision( game.stars, :number_with_precision => 1) %>"></div>
        </div>
        <div style="font-size: 12px; overflow: hidden; height: 100%">
            <a href="<%= game_path(game) %>"><h5><%= game.title %></h5></a>
            <div><%= truncate(game.description, :length => 200) %></div>
        </div>
    </div>
    <div style="width: 100%; bottom: 0px; left: 0px; right: 0px; max-height: 65px; overflow: hidden;">
        <div style="padding: 4px; text-align: center;">
            <% game.each_tag(10) do |tag, html_name| %>
                <a href="<%= tags_path(html_name) %>"><span class="label label-info"><%= truncate(tag, :length => 15) %></span></a>
            <% end %>
        </div>
    </div>
</div>